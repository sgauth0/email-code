<Window x:Class="EmailCode.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EmailCode" Height="720" Width="1280">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="0,0,8,0" />
            <Button Content="Archive" Command="{Binding ArchiveCommand}" Margin="0,0,8,0" />
            <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="0,0,8,0" />
            <Button Content="Apply Label" Command="{Binding ApplyLabelCommand}" />
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160" />
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="8">
                <TextBlock Text="Accounts" FontWeight="Bold" Margin="0,0,0,8" />
                <ListBox ItemsSource="{Binding Accounts}" SelectedItem="{Binding SelectedAccount}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding Email}" FontSize="11" Foreground="Gray" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="8">
                <TextBlock Text="Folders" FontWeight="Bold" Margin="0,0,0,8" />
                <ListBox ItemsSource="{Binding Folders}" SelectedItem="{Binding SelectedFolder}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="8">
                <TextBlock Text="Threads" FontWeight="Bold" Margin="0,0,0,8" />
                <ListBox ItemsSource="{Binding Threads}" SelectedItem="{Binding SelectedThread}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="{Binding Subject}" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding Snippet}" FontSize="11" TextWrapping="Wrap" />
                                <TextBlock Text="{Binding LastActivity}" FontSize="10" Foreground="Gray" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <StackPanel Grid.Column="3" Margin="8">
                <TextBlock Text="Messages" FontWeight="Bold" Margin="0,0,0,8" />
                <ListBox ItemsSource="{Binding Messages}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="{Binding From}" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding SentAt}" FontSize="10" Foreground="Gray" />
                                    <TextBlock Text="{Binding Body}" TextWrapping="Wrap" Margin="0,6,0,0" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
